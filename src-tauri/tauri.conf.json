{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Gutachten Assistant",
  "version": "2.0.0",
  "identifier": "com.medical.gutachten-assistant",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Gutachten Assistant - Medizinische Dokumentation",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 800,
        "resizable": true,
        "maximizable": true,
        "center": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ],
    "copyright": "Â© 2025 Medical AI Solutions",
    "category": "MedicalSoftware",
    "shortDescription": "AI-powered medical documentation assistant",
    "longDescription": "Professional desktop application for German medical professionals featuring embedded AI models for speech recognition, OCR, and medical text processing.",
    "resources": [],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  },
  "plugins": {}
}